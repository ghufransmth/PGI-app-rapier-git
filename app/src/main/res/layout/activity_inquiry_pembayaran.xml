<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pusatgadaiindonesia.app.Interface.Homescreen.FragmentProfile"
    android:background="@drawable/gradient_head"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/back"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_arrow_left"/>
            <TextView
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/century_gothic_bold"
                android:text="Payment"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbarTitle" />
        </LinearLayout>

        <com.loopeer.shadow.ShadowView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/white"
            android:elevation="5dp"
            app:cornerRadiusBL="0dp"
            app:cornerRadiusBR="20dp"
            app:cornerRadiusTL="0dp"
            app:cornerRadiusTR="75dp"
            app:shadowColor="@color/colorPrimaryDark"
            app:shadowMarginBottom="0dp"
            app:shadowMarginRight="0dp"
            app:shadowMarginTop="10dp"
            app:shadowRadius="75dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scrollbarSize="0dp">

                <LinearLayout
                    android:id="@+id/layUtama"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic"
                            android:text="No. Faktur"
                            android:textColor="@color/grey_menu_text"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txtNoFaktur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic_bold"
                            android:gravity="left"
                            android:text="-"
                            android:textColor="@color/grey_menu_text"
                            android:textSize="17dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic"
                            android:text="Jenis Barang"
                            android:textColor="@color/grey_menu_text"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txtJenis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic_bold"
                            android:gravity="right|left"
                            android:text="-"
                            android:textColor="@color/grey_menu_text"
                            android:textSize="17dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic"
                            android:text="Nominal Pinjaman"
                            android:textColor="@color/grey_menu_text"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txtNominal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic_bold"
                            android:gravity="right|left"
                            android:text="-"
                            android:textColor="@color/grey_menu_text"
                            android:textSize="17dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic"
                            android:text="Jatuh Tempo"
                            android:textColor="@color/grey_menu_text"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txtJatuhTempo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic_bold"
                            android:gravity="right|left"
                            android:text="-"
                            android:textColor="@color/grey_menu_text"
                            android:textSize="17dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic"
                            android:text="Detail \nPerpanjangan"
                            android:textColor="@color/grey_menu_text"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txtDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic_bold"
                            android:gravity="right|left"
                            android:text=":"
                            android:textColor="@color/grey_menu_text"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                        android:id="@+id/refresh"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="7dp"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

                    <LinearLayout
                        android:id="@+id/parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/nama"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/century_gothic"
                            android:text=""
                            android:textColor="@color/grey_menu_text"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/harga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/century_gothic_bold"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/grey_menu_text"
                            android:textSize="12dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/Lines"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/LinearLayout"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/grey_menu_text_soft"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic"
                            android:text="Total"
                            android:textColor="@color/grey_menu_text"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txtTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic_bold"
                            android:gravity="right|left"
                            android:text="-"
                            android:textColor="@color/grey_menu_text"
                            android:textSize="17dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic"
                            android:text="Jatuh Tempo"
                            android:textColor="@color/grey_menu_text"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txtTglJatuhTempo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic_bold"
                            android:gravity="right|left"
                            android:text="-"
                            android:textColor="@color/grey_menu_text"
                            android:textSize="17dp" />
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/pay_next_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/century_gothic_bold"
                        android:text="Bayar Bulan Berikutnya"
                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/angsuran_pokok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/century_gothic_bold"
                        android:text="Angsuran Pokok" />

                    <LinearLayout
                        android:id="@+id/LinearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingRight="15dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic"
                            android:text="*Isi angsuran apabila ingin mencicil pokok"
                            android:textColor="@color/red_dark_beranda"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/century_gothic"
                                android:text="Angsuran Pokok: "
                                android:textColor="@color/grey_menu_text"
                                android:textSize="17dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corner"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic"
                                    android:text="Rp. "
                                    android:textColor="@color/grey_menu_text"
                                    android:textSize="14sp" />

                                <EditText
                                    android:id="@+id/note"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:background="@color/white"
                                    android:fontFamily="@font/century_gothic"
                                    android:gravity="top"
                                    android:hint=""
                                    android:minHeight="20dp"
                                    android:text=""
                                    android:textColor="@color/grey_menu_text"
                                    android:textSize="14sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/century_gothic"
                            android:text="Minimal Rp. 100.000 dan kelipatan Rp. 50.000."
                            android:textColor="@color/pink_beranda"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="20dp"
                        android:background="#1EB2E7"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/green_beranda"
                            android:gravity="center"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/century_gothic_bold"
                                android:text="Pilih Metode Pembayaran"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </com.loopeer.shadow.ShadowView>
        <!--<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:orientation="vertical"
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="75dp"
                app:cardElevation="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>-->

    </LinearLayout>

</LinearLayout>
