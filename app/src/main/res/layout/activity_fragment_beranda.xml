<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pusatgadaiindonesia.app.Interface.Homescreen.FragmentBeranda"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="5dp"
                    android:layout_marginLeft="-60dp"
                    android:layout_marginTop="-60dp">

                    <LinearLayout
                        android:id="@+id/headLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_head"
                        android:orientation="horizontal"
                        android:paddingLeft="85dp"
                        android:paddingTop="90dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="35dp">

                        <LinearLayout
                            android:id="@+id/headLayoutX"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic_bold"
                                    android:text="Halo"
                                    android:textColor="@color/white"
                                    android:textSize="18dp" />

                                <TextView
                                    android:id="@+id/nama"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/century_gothic"
                                    android:text="@string/balanceSaatIni"
                                    android:textColor="@color/white"
                                    android:textSize="13dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/century_gothic_bold"
                                        android:text="null"
                                        android:textColor="@color/white"
                                        android:textSize="27dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/century_gothic_bold"
                                        android:text="IDR"
                                        android:textColor="@color/white"
                                        android:textSize="27dp" />
                                </LinearLayout>
                            </LinearLayout>
                            <RelativeLayout
                                android:id="@+id/notifikasi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="27dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/notifikasi_button" />

                                <LinearLayout
                                    android:id="@+id/badgeLive"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@drawable/ic_circle_red"
                                    android:gravity="center"
                                    android:visibility="visible">

                                    <TextView
                                        android:id="@+id/textNotifLive"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/century_gothic"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="10sp" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardKontrak"
                    android:layout_marginTop="147.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic"
                                    android:text="Jatuh Tempo :"
                                    android:textColor="@color/blue_selected"
                                    android:textSize="10.5dp" />
                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic"
                                    android:text="-"
                                    android:textColor="@color/blue_selected"
                                    android:textSize="10.5dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="-3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic_bold"
                                    android:text="0"
                                    android:textColor="@color/green_beranda"
                                    android:textSize="19.5dp" />
                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic_bold"
                                    android:text="IDR"
                                    android:textColor="@color/green_beranda"
                                    android:textSize="19.5dp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/showBalance"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:background="@drawable/kontrak"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:orientation="vertical"
                        android:id="@+id/elektronik"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="#1EB2E7"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_utama_elektronik"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_marginBottom="-3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic_bold"
                                    android:text="Gadai"
                                    android:textColor="@color/grey_menu_text"
                                    android:textSize="17dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic"
                                    android:text="Elektronik"
                                    android:textColor="@color/grey_menu_text"
                                    android:textSize="19dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:orientation="vertical"
                            android:id="@+id/kendaraan"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#441EE7"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="5dp">
                            <RelativeLayout
                                android:padding="7dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginRight="-12dp"
                                    android:layout_marginTop="-12dp"
                                    android:id="@+id/imgKendaraan"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="90dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/ic_utama_kendaraan"/>
                                <LinearLayout
                                    android:layout_alignParentBottom="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_marginBottom="-3dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/century_gothic_bold"
                                        android:text="Gadai"
                                        android:textColor="@color/grey_menu_text"
                                        android:textSize="17dp" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/century_gothic"
                                        android:text="Kendaraan"
                                        android:textColor="@color/grey_menu_text"
                                        android:textSize="19dp" />
                                </LinearLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:orientation="vertical"
                            android:id="@+id/bpkb"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#FDFF21"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="5dp">
                            <RelativeLayout
                                android:padding="7dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginRight="-10dp"
                                    android:layout_marginTop="-3dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="80dp"
                                    android:layout_height="55dp"
                                    android:src="@drawable/ic_utama_bpkb"/>
                                <LinearLayout
                                    android:layout_alignParentBottom="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_marginBottom="-3dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/century_gothic_bold"
                                        android:text="Gadai"
                                        android:textColor="@color/grey_menu_text"
                                        android:textSize="17dp" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/century_gothic"
                                        android:text="BPKB"
                                        android:textColor="@color/grey_menu_text"
                                        android:textSize="19dp" />
                                </LinearLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:orientation="vertical"
                        android:id="@+id/listrik"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="#FF2521"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp">
                        <RelativeLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_alignParentRight="true"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_utama_listrik"/>
                            <LinearLayout
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_marginBottom="-1dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic_bold"
                                    android:text="Beli"
                                    android:textColor="@color/grey_menu_text"
                                    android:textSize="12dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic"
                                    android:text="Pulsa Listrik"
                                    android:textColor="@color/grey_menu_text"
                                    android:textSize="13dp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:orientation="vertical"
                        android:id="@+id/cabang"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="#DF1D87"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp">
                        <RelativeLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_alignParentRight="true"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_utama_cabang"/>
                            <LinearLayout
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_marginBottom="-1dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic_bold"
                                    android:text="Cabang"
                                    android:textColor="@color/grey_menu_text"
                                    android:textSize="12dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic"
                                    android:text="Terdekat"
                                    android:textColor="@color/grey_menu_text"
                                    android:textSize="13dp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:orientation="vertical"
                        android:id="@+id/news"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="#1BD325"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp">
                        <RelativeLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_alignParentRight="true"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_utama_news"/>
                            <LinearLayout
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_marginBottom="-1dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic_bold"
                                    android:text="News"
                                    android:textColor="@color/grey_menu_text"
                                    android:textSize="12dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/century_gothic"
                                    android:text="Feed"
                                    android:textColor="@color/grey_menu_text"
                                    android:textSize="13dp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>
            <!--<ss.com.bannerslider.views.BannerSlider
                android:id="@+id/banner_slider1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:defaultBanner="1"
                app:animateIndicators="true"
                app:indicatorSize="5dp"
                app:interval="3000"
                app:loopSlides="true"
                app:defaultIndicators="circle"
                app:hideIndicators="false"/>-->

            <ss.com.bannerslider.Slider
                android:id="@+id/banner_slider2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:slider_animateIndicators="true"
                app:slider_emptyView="@layout/layout_empty_view"
                app:slider_indicatorSize="5dp"
                app:slider_interval="3000"
                app:slider_hideIndicators="false"
                app:slider_defaultBanner="1"
                app:slider_loopSlides="true"
                app:slider_selectedSlideIndicator="@drawable/indicator_circle_selected"
                app:slider_unselectedSlideIndicator="@drawable/indicator_circle_unselected" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
